<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyleTitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/toolbar_dark</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyleMineImg">
        <item name="android:layout_width">@dimen/mine_option_img_height</item>
        <item name="android:layout_height">@dimen/mine_option_img_height</item>
        <item name="android:layout_marginLeft">@dimen/margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/mine_option_img_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/mine_option_img_vertical_margin</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="StyleTitleBackToTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_title_back_to</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="NoBackGroundDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="StyleConfigEditTextNoInputType">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:drawable/editbox_background_normal</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="StyleTextButton">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/selector_bg_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/style_button_padding_left</item>
        <item name="android:paddingRight">@dimen/style_button_padding_right</item>
        <item name="android:paddingTop">@dimen/style_button_padding_top</item>
        <item name="android:paddingBottom">@dimen/style_button_padding_bottom</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyleRightArrow">
        <item name="android:layout_width">@dimen/arrow_right_size</item>
        <item name="android:layout_height">@dimen/arrow_right_size</item>
        <item name="android:layout_marginLeft">@dimen/horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/horizontal_margin</item>
        <item name="android:src">@drawable/arrow_right</item>
    </style>

    <style name="StyleTitleBackImg">
        <item name="android:layout_width">@dimen/title_back_img</item>
        <item name="android:layout_height">@dimen/title_back_img</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="TableLayoutText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
